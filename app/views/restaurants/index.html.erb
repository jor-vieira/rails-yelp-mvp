<div class="container mt-5">
  <h1>All Restaurants</h1>

  <div class="row mt-4">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.address %></p>
            <p class="card-text"><small class="text-muted"><%= restaurant.category.capitalize %></small></p>
            <%= link_to "View details", restaurant_path(restaurant), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-success" %>
  </div>
</div>
