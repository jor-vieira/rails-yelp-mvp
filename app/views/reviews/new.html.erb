<div class="container d-flex justify-content-center mt-5">
  <div class="card p-4 shadow-lg" style="width: 400px;">
    <h3 class="text-center mb-3">Leave a Review</h3>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <div class="form-group">
        <%= f.input :content, label: "Review", input_html: { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.input :rating, as: :select, collection: 1..5, prompt: "Choose a rating", input_html: { class: "form-control" } %>
      </div>
      <div class="text-center">
        <%= f.submit "Submit Review", class: "btn btn-primary mt-3" %>
      </div>
    <% end %>
  </div>
</div>
